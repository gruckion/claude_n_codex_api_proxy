# Claude & Codex API Proxy - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# PROXY SERVER CONFIGURATION
# =============================================================================

# Host to bind the proxy server to (default: 127.0.0.1)
PROXY_HOST=127.0.0.1

# Port to listen on (default: 8080)
PROXY_PORT=8080

# Allowed API paths (comma-separated regex patterns)
# Leave empty to use defaults
# ALLOWED_PATHS=^/v1/messages,^/v1/chat/completions

# =============================================================================
# API KEYS
# =============================================================================

# Anthropic API Key
# Set to all 9s (e.g., 999999999999) to route to local Claude Code CLI
# Set to a real API key to forward to Anthropic API
ANTHROPIC_API_KEY=999999999999

# OpenAI API Key
# Set to all 9s (e.g., 999999999999) to route to local Codex CLI
# Set to a real API key to forward to OpenAI API
OPENAI_API_KEY=999999999999

# Google API Key (for Gemini)
# Set to all 9s (e.g., 999999999999) to route to local Gemini CLI
# Set to a real API key to forward to Google Generative AI API
GOOGLE_API_KEY=999999999999

# =============================================================================
# ROUTING CONFIGURATION
# =============================================================================

# Default AI provider when using Python library
# Options: claude, anthropic, codex, openai
AI_ROUTER_DEFAULT=claude

# =============================================================================
# HTTP PROXY SETTINGS (for client applications)
# =============================================================================

# Uncomment these when running client applications through the proxy
# HTTP_PROXY=http://localhost:8080
# HTTPS_PROXY=http://localhost:8080
